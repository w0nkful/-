#include <iostream>
#include <string>

using namespace std;

int main() {
    setlocale(0, "");
    cout << "[ - ] Программа «Времена года»" << endl;
    cout << endl;
    cout << "[ 1 ] Лето" << endl;
    cout << "[ 2 ] Осень" << endl;
    cout << "[ 3 ] Зима" << endl;
    cout << "[ 4 ] Весна" << endl;
    cout << endl;

    
    cout << "[ - ] Введите значение: ";
    string input;
    cin >> input;

    
    if (input == "1") {
        cout << "[ - ] Сейчас лето, можно надеть лёгкую одежду и взять солнцезащитные очки." << endl;
    }
    else if (input == "2") {
        cout << "[ - ] Сейчас осень, следует одеться тепло и взять с собой зонт." << endl;
    }
    else if (input == "3") {
        cout << "[ - ] Сейчас зима, нужно надеть тёплую куртку, шапку и перчатки." << endl;
    }
    else if (input == "4") {
        cout << "[ - ] Сейчас весна, погода переменчива — возьмите лёгкую куртку и зонт." << endl;
    }
    else {
        cout << "[ - ] Такого времени года нет. Пожалуйста, введите число от 1 до 4." << endl;
    }

    return 0;
}
