#include <iostream>
#include <iomanip> 
#include <vector>
#include <string>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian"); 

    double num1, num2, result;
    char operation;

    cout << "Калькулятор" << endl;
    cout << "Доступные операции:" << endl;
    cout << "+(Сложение), -(Вычитание) *(Умножение), /(Деление)" << endl;
    cout << "----------------------" << endl;

    
    cout << "Введите первое число: ";
    if (!(cin >> num1))
    {
        cout << "Ошибка: введите корректное число!" << endl;
        return 1;
    }

    
    cout << "Введите операцию (+, -, *, /): ";
    cin >> operation;

    
    cout << "Введите второе число: ";
    if (!(cin >> num2))
    {
        cout << "Ошибка: введите корректное число!" << endl;
        return 1;
    }

    
    switch (operation)
    {
    case '+':
        result = num1 + num2;
        cout << fixed << setprecision(2);
        cout << "Результат: " << num1 << " + " << num2 << " = " << result << endl;
        break;
    case '-':
        result = num1 - num2;
        cout << fixed << setprecision(2);
        cout << "Результат: " << num1 << " - " << num2 << " = " << result << endl;
        break;
    case '*':
        result = num1 * num2;
        cout << fixed << setprecision(2);
        cout << "Результат: " << num1 << " * " << num2 << " = " << result << endl;
        break;
    case '/':
        if (num2 == 0)
        {
            cout << "Ошибка: деление на ноль!" << endl;
        }
        else
        {
            result = num1 / num2;
            cout << fixed << setprecision(2);
            cout << "Результат: " << num1 << " / " << num2 << " = " << result << endl;
        }
        break;
    default:
        cout << "Ошибка: неверная операция!" << endl;
        break;
    }

    return 0;
}

int main() {
    while (true) {
        
        
    }
    return 0;  
    vector<string> history(99999);
    cout << "(Введите выражение";
    string input;
    getline(cin, input);

    if (input == "exit") {
        if (history.empty()) {
            cout << "История пуста" << endl;
            for (size_t i = 0; i < history.size(); ++i) {
                cout << i + 1 << "." << history[i] << endl; 
                continue;
                if (input.empty()) {
                    continue;
                    history.push_back(input);
                    return 0;
                }

            }
        }
    }

}
